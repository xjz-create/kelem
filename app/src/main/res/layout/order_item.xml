<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="15dp">

    <TextView
        android:id="@+id/textView_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="订单编号：20230627203800000"
        android:textSize="16sp"
        android:layout_marginVertical="10dp"
        android:textColor="@color/black"/>




    <TextView
        android:id="@+id/textView_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="2023年06月27日 20：38" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_takeAway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="堂食"
            android:textSize="16sp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textView_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="总价：￥ 0"
            android:textSize="16sp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

    <!-- 新增：饮品详细信息（规格、糖量、温度等） -->
    <TextView
        android:id="@+id/textView_flavorDetails"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="规格: 中杯, 糖量: 全糖, 温度: 热"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_drinksDetails"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="奶茶: 轻乳茶"
        android:textSize="14sp" />


</LinearLayout>